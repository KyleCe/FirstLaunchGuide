<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="@dimen/indicator_unchecked_padding_size"
        android:left="@dimen/indicator_unchecked_padding_size"
        android:right="@dimen/indicator_unchecked_padding_size"
        android:top="@dimen/indicator_unchecked_padding_size"
        >
        <shape android:shape="oval">
            <padding
                android:bottom="@dimen/indicator_unchecked_shape_padding_size"
                android:left="@dimen/indicator_unchecked_shape_padding_size"
                android:right="@dimen/indicator_unchecked_shape_padding_size"
                android:top="@dimen/indicator_unchecked_shape_padding_size"
                />

            <size
                android:width="8dp"
                android:height="8dp"/>
            <corners android:radius="8dp"/>
            <gradient
                android:angle="90"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:startColor="#44000000"/>
        </shape>
    </item>
    <item
        >
        <shape android:shape="oval">
            <padding
                android:bottom="@dimen/indicator_unchecked_padding_size"
                android:left="@dimen/indicator_unchecked_padding_size"
                android:right="@dimen/indicator_unchecked_padding_size"
                android:top="@dimen/indicator_unchecked_padding_size"
                />
            <size
                android:width="8dp"
                android:height="8dp"/>
            <solid android:color="#CCffffff"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
</layer-list>