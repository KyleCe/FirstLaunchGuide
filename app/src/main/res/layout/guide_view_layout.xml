<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools">

    <com.ce.tool.firstlaunchguide.guide.GuideSmoothViewPager
        android:id="@+id/guide_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@android:color/holo_blue_light"
        >
    </com.ce.tool.firstlaunchguide.guide.GuideSmoothViewPager>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="@dimen/indicator_size"
            android:layout_height="@dimen/indicator_size"
            android:button="@drawable/guide_page_indicator"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="@dimen/indicator_size"
            android:layout_height="@dimen/indicator_size"
            android:layout_marginLeft="13dp"
            android:button="@drawable/guide_page_indicator"
            />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="@dimen/indicator_size"
            android:layout_height="@dimen/indicator_size"
            android:layout_marginLeft="13dp"
            android:button="@drawable/guide_page_indicator"
            />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="@dimen/indicator_size"
            android:layout_height="@dimen/indicator_size"
            android:layout_marginLeft="13dp"
            android:button="@drawable/guide_page_indicator"
            />
    </RadioGroup>
</merge>

