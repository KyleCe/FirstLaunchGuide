<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/about_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/view_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/guidepages_bg_01"
        android:scaleType="centerCrop"
        >
    </ImageView>

    <LinearLayout
        android:id="@+id/about_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/guide_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            tools:text="New variety of view"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/guide_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="3"
            android:layout_marginBottom="70dp"
            android:lines="3"
            tools:text="One view, multiple modes\n Manager by accounts and enjoy \n your independence"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            />


        <Button
            android:id="@+id/create_account_btn_on_last_page"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/guide_view_create_account_btn_style"
            android:text="Create an account"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:enabled="false"
            android:visibility="invisible"
            tools:visibility="visible"
            />
    </LinearLayout>
</FrameLayout>